<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Images.MainPage">

    <StackLayout>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="img1" Source="dotnet_bot.png" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="img2" Source="mauii.jpg" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="img3" Source="spongbob.png" Grid.Row="1" Grid.Column="0"/>
            <Image x:Name="img4" Source="mix.png" Grid.Row="1" Grid.Column="1"/>
        </Grid>

        <Button x:Name="clickme" Text="Click" Clicked="clickme_Clicked"/>
    </StackLayout>

</ContentPage>
